generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id             String   @id @default(uuid())
  clerkId        String
  email          String?  @unique
  image          String?
  username       String?
  firstname      String?
  lastname       String?
  clerkCreatedAt DateTime @default(now())
  clerkUpdatedAt DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  Bet            Bet[]
}

model Celebrity {
  id               String             @id @default(uuid())
  name             String
  birth            DateTime?
  death            DateTime?
  photo            String?
  CelebritiesOnBet CelebritiesOnBet[]
}

model Bet {
  id               String             @id @default(uuid())
  user             User               @relation(fields: [userId], references: [id])
  userId           String
  year             Int
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  CelebritiesOnBet CelebritiesOnBet[]

  @@unique([userId, year])
}

model CelebritiesOnBet {
  bet         Bet       @relation(fields: [betId], references: [id])
  betId       String
  celebrity   Celebrity @relation(fields: [celebrityId], references: [id])
  celebrityId String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@id([betId, celebrityId])
}
