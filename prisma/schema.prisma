generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  clerkId        String
  email          String?  @unique
  image          String?
  username       String?
  firstname      String?
  lastname       String?
  clerkCreatedAt DateTime @default(now())
  clerkUpdatedAt DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  Bets           Bet[]
}

model Celebrity {
  id               String             @id @default(uuid())
  name             String
  birth            DateTime?          @db.Date
  death            DateTime?          @db.Date
  photo            String?
  CelebritiesOnBet CelebritiesOnBet[]
}

model Bet {
  id               String             @id @default(uuid())
  userId           String
  year             Int
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  user             User               @relation(fields: [userId], references: [id])
  CelebritiesOnBet CelebritiesOnBet[]

  @@unique([userId, year])
}

model CelebritiesOnBet {
  betId       String
  celebrityId String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  points      Float     @default(0)
  bet         Bet       @relation(fields: [betId], references: [id])
  celebrity   Celebrity @relation(fields: [celebrityId], references: [id])

  @@id([betId, celebrityId])
}
