generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CircleStatus {
  OPEN
  LOCKED
  ARCHIVED
}

enum MembershipRole {
  ADMIN
  MEMBER
}

enum CircleVisibility {
  PRIVATE
  PUBLIC
}

model User {
  id             String       @id @default(uuid())
  clerkId        String
  email          String?      @unique
  image          String?
  username       String?
  firstname      String?
  lastname       String?
  clerkCreatedAt DateTime     @default(now())
  clerkUpdatedAt DateTime     @default(now())
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  Bets           Bet[]
  Membership     Membership[]
}

model Celebrity {
  id               String             @id @default(uuid())
  name             String
  birth            DateTime?          @db.Date
  death            DateTime?          @db.Date
  photo            String?
  CelebritiesOnBet CelebritiesOnBet[]
}

model Bet {
  id               String             @id @default(uuid())
  userId           String
  circleId         String?
  year             Int
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  user             User               @relation(fields: [userId], references: [id])
  Circle           Circle?            @relation(fields: [circleId], references: [id])
  CelebritiesOnBet CelebritiesOnBet[]

  @@unique([userId, circleId, year])
}

model CelebritiesOnBet {
  betId       String
  celebrityId String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  points      Float     @default(0)
  bet         Bet       @relation(fields: [betId], references: [id])
  celebrity   Celebrity @relation(fields: [celebrityId], references: [id])

  @@id([betId, celebrityId])
}

model Circle {
  id          String           @id @default(uuid())
  name        String
  visibility  CircleVisibility @default(PRIVATE)
  status      CircleStatus     @default(OPEN)
  code        String?
  allowNewBet Boolean
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  memberships Membership[]
  bets        Bet[]
}

model Membership {
  id       String         @id @default(uuid())
  user     User           @relation(fields: [userId], references: [id])
  userId   String
  circle   Circle         @relation(fields: [circleId], references: [id])
  circleId String
  role     MembershipRole @default(MEMBER)
  joinedAt DateTime       @default(now())

  @@unique([userId, circleId])
}
